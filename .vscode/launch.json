    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug test-pdf (Excel)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/test/pdf",
            "args": [
                "-format", "xlsx",
                "-name", "TestReportExcel",
                "-output-folder", "test-reports",
                "-certs-path", "test/certs/sa-win2k25"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "mkdir-test-reports"
        },
        {
            "name": "Debug test-pdf (PDF)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/test/pdf",
            "args": [
                "-format", "pdf",
                "-name", "TestReportPDF",
                "-output-folder", "test-reports",
                "-orientation", "portrait",
                "-certs-path", "test/certs/sa-win2k25"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "mkdir-test-reports"
        },
        {
            "name": "Debug test-pdf (Custom Excel)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/test/pdf",
            "args": [
                "-format", "xlsx",
                "-name", "TestReportCustomExcel",
                "-obj-ids", "RfEbJ",
                "-output-folder", "test-reports",
                "-certs-path", "test/certs/sa-win2k25"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "mkdir-test-reports"
        },
        {
            "name": "Debug test-pdf (Custom PDF)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/test/pdf",
            "args": [
                "-format", "pdf",
                "-name", "TestReportCustomPDF",
                "-output-folder", "test-reports",
                "-orientation", "portrait",
                "-obj-ids", "RfEbJ",
                "-certs-path", "test/certs/sa-win2k25"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "mkdir-test-reports"
        }
    ]
}